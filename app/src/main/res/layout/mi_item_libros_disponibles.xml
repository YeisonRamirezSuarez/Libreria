<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_button_card_vacio"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView_txt"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/nombre_libro_txt"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="-5dp"
            android:text="Titulo 1"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <TextView
            android:id="@+id/autor_libro_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Autor 1"
            android:textAlignment="center"
            android:textColor="#6A6767"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />


    </LinearLayout>


</LinearLayout>
