<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".AgregarLibros">


    <include
        layout="@layout/item_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_txt"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <View
            android:layout_width="20dp"
            android:layout_height="150dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />


            <TextView
                android:id="@+id/nombreLibroHistorial_ver"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Nombre Libro"
                android:paddingStart="10dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/autorLibroHistorial_ver"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:text="Autor Libro"
                android:paddingStart="10dp"

                android:textColor="#5A5858"
                android:textSize="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <TextView
                android:id="@+id/descripcionLibroHistorial_ver"
                android:layout_width="200dp"
                android:layout_height="52dp"
                android:text="Descripcion Libro"
                android:paddingStart="10dp"
                android:textColor="#FFFFFF"
                android:textSize="9dp" />


        </LinearLayout>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/orange" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">


        <include
            layout="@layout/mi_item_historial_libros_usuario_prestado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </LinearLayout>



</LinearLayout>