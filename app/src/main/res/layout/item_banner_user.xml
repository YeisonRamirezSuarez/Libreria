<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/funcionesUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/ic_agregar" />

    <ImageView
        android:id="@+id/volverLibros"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_flecha_izquierda" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:background="@color/black"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icono_usuario_txt"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            app:srcCompat="@drawable/user" />

        <View
            android:layout_width="20dp"
            android:layout_height="60dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/nombre_usuario_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>





    <SearchView
        android:id="@+id/txtBuscar"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:searchHintIcon="@drawable/buscador"
        android:background="@drawable/customs_editex_blanco"
        android:searchIcon="@drawable/buscador"
        android:closeIcon="@drawable/iclose"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/tituloBannerUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/orange" />



</LinearLayout>