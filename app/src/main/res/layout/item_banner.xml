<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="20dp"
    android:background="@color/black"
    android:elevation="-20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



    <ImageView
        android:id="@+id/borrar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="280dp"
        android:elevation="60dp"
        android:visibility="invisible"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/ic_baseline_delete_24" />

    <ImageView
        android:id="@+id/funcionesUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/ic_agregar" />


    <ImageView
        android:id="@+id/volverLibros"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:visibility="gone"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/ic_flecha_izquierda" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-110dp"
        android:background="@color/black"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icono_usuario_txt"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:background="@drawable/admin"
            />

        <View
            android:layout_width="20dp"
            android:layout_height="60dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Administrador"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/nombre_administrador_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Nombre"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </LinearLayout>




    </LinearLayout>

    <SearchView
        android:id="@+id/txtBuscar"
        android:layout_marginTop="10dp"
        android:focusable="false"
        android:searchHintIcon="@drawable/buscador"
        android:background="@drawable/customs_editex_blanco"
        android:searchIcon="@drawable/buscador"
        android:closeIcon="@drawable/iclose"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/tituloBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:elevation="-20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/orange" />
    

</LinearLayout>

