<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/customs_historial">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nombre_usuario_historial_txt"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/customs_buscar"
            android:gravity="center"
            android:padding="5dp"
            android:text="Nombre"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/telefono_historial_txt"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/customs_buscar"
            android:gravity="center"
            android:padding="5dp"
            android:text="Telefono"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/correo_historial_txt"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:background="@drawable/customs_buscar"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_marginStart="42dp"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="Correo Electronico"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />





</LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reciclarVistaHistorial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp" />


</LinearLayout>