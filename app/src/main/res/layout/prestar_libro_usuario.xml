<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".AgregarLibros">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            layout="@layout/item_banner_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView_txt"
            android:layout_width="250dp"
            android:layout_marginTop="40dp"
            android:layout_height="250dp"
            android:layout_gravity="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/nombreLibro_ver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Libro"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/autorLibro_ver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autor Libro"
            android:textAlignment="center"
            android:textColor="#373636"
            android:textSize="12dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <TextView
            android:id="@+id/descripcionLibro_ver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion Libro"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/orange" />


        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>



        <Button
            android:id="@+id/prestar_libro"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_button"
            android:text="Prestar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>


    </ScrollView>


</LinearLayout>